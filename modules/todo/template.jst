<div class="todolist">
    <h3><%= todo.title %></h3>

    <form id="tasks-list">
    <input type="text" class="add_task" />
    </form>

    <ul id="tasks">
        <% _.each(todo.items, function(item) { %>
            <li class="todolist_element">
                <input type="checkbox" data-name="<%= item.name %>" /> 
                <%= item.name %>
            </li>
        <% }); %>
    </ul>
</div>    