<div class="todolist">
    <p class="tdtitle"><%= todo.title %></p>
    <div class="todo_title_edit" style="display: none;">
        <form onsubmit="return false;" action="#"><input type="text" name="title" class="todo_title_editbox" /></form>
        <br />
    </div>
    <hr />

    <form class="tasks-list" onsubmit="return false;" method="" action="#" data-action="addItem">
        <input type="text" placeholder='Add task.' name="task-name" class="add_task" data-addTask="name"/>
    </form>
    

    <ul class="tasks">
        <% _.each(todo.items, function(state, name) { %>
            <li class="todolist_element">
                <% if(state === true) { %>
                <input type="checkbox" data-name="<%= name %>" class="<%= name %>" checked /> 
                <strike><label for="<%= name %>"><%= name %></label></strike>
                <% } else { %>
                    <input type="checkbox" data-name="<%= name %>" class="<%= name %>"/> 
                    <label for="<%= name %>"><%= name %></label>
                <% } %>

                <img style="float: right; margin-right: 10px;" src="/img/delete.png" class="todolist_remove_item" title="Remove" data-name="<%= name %>" />
            </li>
        <% }); %>
    </ul>
</div>    